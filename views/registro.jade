extends ./layout.jade
block contenido
  div.container
    div.row
      div(class="col-lg-4 col-md-4 col-sm-4 col-xs-10 col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-1")
        div(class="panel panel-primary margin-top-5")
          div.panel-heading Registro
          div(class="panel-body")
            form(action="/registro",method="POST")
              div(class="form-group label-floating")
                label.control-label(for="nombre") Nombre
                input#nombre.form-control(type="text",name="nombre",required)
              div(class="form-group label-floating")
                label.control-label(for="apellido") Apellido
                input#apellido.form-control(type="text",name="apellido",required)
              div(class="form-group")
                label.control-label(for="fechaNacimiento") Fecha de nacimiento
                input#fechaNacimiento.form-control(type="date",name="fechaNacimiento",required)
              div(class="form-group label-floating")
                label.control-label(for="email") Correo electrónico
                input#email.form-control(type="email",name="email",required)
              div(class="form-group label-floating")
                label.control-label(for="password") Contraseña
                input#password.form-control(type="password",name="password",required)
              button(type="submit",class="btn btn-primary btn-raised") Registrase
              a(href="/login",class="btn btn-info pull-right") Iniciar