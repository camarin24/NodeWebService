extends ./layout.jade
block contenido
  div.row
    div(class=["col","l8","m8","s12","offset-l2","offset-s2"])
      div(class=["card","login"])
        div(class=["card-content","darken-text"])
          span.card-title Iniciar Sessión
          form
            div.row
              div(class=["input-field col s12 m10 l10 offset-l1 offset-m1"])
                input(id="email",type="email",class="validate")
                label(for="email") Correo Electrónico
            div.row
              div(class="input-field col s12 m10 l10 offset-l1 offset-m1")
                input(id="password" type="password",class="validate")
                label(for="password") Contraseña
        div.card-action
          div.row
            div(class="input-field col s12 m10 l10 offset-l1 offset-m1")
              button(class="btn waves-effect waves-light",type="submit",name="action") Iniciar
              a(href="", class="red-text right waves-effect waves-dark btn light-green lighten-5") Registrate


