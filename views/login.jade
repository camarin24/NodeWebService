extends ./layout.jade
block contenido
  div.container
    div.row
      div(class="col-lg-4 col-md-4 col-sm-4 col-xs-10 col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-1")
        div.margin-top-45
          div(class="panel panel-primary")
            div.panel-heading Inicio de sesion
            div.panel-body
              form(action="/login",method="POST")
                div(class="form-group label-floating")
                  label.control-label(for="email") Correo electrónico
                  input#email.form-control(type="email",name="email",required)
                div(class="form-group label-floating")
                  label.control-label(for="password") Contraseña
                  input#password.form-control(type="password",name="password",required)
                button(type="submit",class="btn btn-primary btn-raised") Iniciar
                a(href="/registro",class="btn btn-info pull-right") Registrate
              
